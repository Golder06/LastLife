{
	"type": "origins:multiple",
	"timer": {
		"type": "origins:cooldown",
		"cooldown": 600,
		"hud_render": {
			"should_render": true,
			"bar_index": 4,
			"sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png"
		}
	},
	"trigger": {
		"type": "origins:active_self",
		"entity_action": {
			"type": "origins:trigger_cooldown",
			"power": "*:*_timer"
		},

		"key": {
			"key": "key.origins.primary_active"
		},
		"cooldown": 0,
		"condition": {
			"type": "origins:resource",
			"resource": "*:*_timer",
			"compare_to": 0,
			"comparison": "=="
		}
	},
	"transfer": {
		"type": "origins:action_on_hit",
		"bientity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:target_action",
					"action": {
						"type": "origins:and",
						"actions": [
							{
								"type": "origins:execute_command",
								"command": "power grant @s lastlife:grant/grant_life lastlife:lifetransfer"
							},
							{
								"type": "origins:execute_command",
								"command": "resource set @s lastlife:life_transfer_timer 6000"
							}
						]
					}
				},
				{
					"type": "origins:actor_action",
					"action": {
						"type": "origins:execute_command",
						"command": "power grant @s lastlife:grant/revoke_life lastlife:lifetransfer"
					}
				}
			]
		},
		"bientity_condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:target_condition",
					"condition": {
						"type": "origins:and",
						"conditions": [
							{
								"type": "origins:entity_type",
								"entity_type": "minecraft:player"
							},
							{
								"type": "origins:origin",
								"origin": "*:lifes/6",
								"layer": "*:lives",
								"inverted": true
							}
						]
						
					}
				},
				{
					"type": "origins:actor_condition",
					"condition": {
						"type": "origins:resource",
						"resource": "*:*_timer",
						"comparison": ">",
						"compare_to": 0
					}
				}
			]
		}
	},
	"name": "Life Transfer",
	"description": "You can transfer a life to anyone you want (that doesn't already have 6 lifes). All you have to do is press the respective key and hit the person you wanna transfer your life to."
}